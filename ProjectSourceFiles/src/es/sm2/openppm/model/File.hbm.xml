<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!-- Hibernate Generator by Javier Hernandez -->
<hibernate-mapping>
    <class name="es.sm2.openppm.model.File" table="file">
        <id name="idFile" type="java.lang.Integer">
            <column name="idFile" />
            <generator class="native">
                <param name="sequence">file_SEQ</param>
            </generator>
        </id>
        <many-to-one name="documentation" class="es.sm2.openppm.model.Documentation" fetch="select">
            <column name="idDocumentation" not-null="true" />
        </many-to-one>
        <property name="file" type="binary">
            <column name="file" />
        </property>
        <property name="extension" type="string">
            <column name="extension" length="10" />
        </property>
        <property name="mime" type="string">
            <column name="mime" length="250" not-null="true" />
        </property>
    </class>
</hibernate-mapping>
