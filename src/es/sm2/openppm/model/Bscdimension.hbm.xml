                <param name="sequence">bscdimension_SEQ</param>
            </generator>
        </id>
        <many-to-one name="company" class="es.sm2.openppm.model.Company" fetch="select">
            <column name="idCompany" not-null="true" />
        </many-to-one>
        <property name="name" type="string">
            <column name="name" length="50" not-null="true" />
        </property>
        <set name="metrickpis" inverse="true" lazy="true" table="metrickpi" fetch="select">
            <key>
                <column name="idBscDimension" />
            </key>
            <one-to-many class="es.sm2.openppm.model.Metrickpi" />
        </set>
    </class>
</hibernate-mapping>
